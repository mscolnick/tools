{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    // "declaration": true,
    // "declarationMap": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "incremental": true,
    "jsx": "react",
    "lib": [
      "es2017",
      "dom"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    // "sourceMap": true,
    "strict": true,
    "stripInternal": true,
    "target": "es2015"
  }
}
